<div>
	<%= user.first %> <%= user.last %> (<%= user.email %>) karma: <%= user.karma %> | <%= link_to 'edit', edit_user_path(user) %> | <%= link_to 'show', user_path(user) %> 
  <% if current_user.admin? and !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                data: { confirm: "You sure?" } %>
  <% end %>
</div>
