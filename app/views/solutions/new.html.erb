<h3>new solution for <%= @exercise.name %></h3>

<%= render @exercise %>

<%= form_for @solution do |form| %>
  <%= render 'shared/error_messages', :object=>form.object %>
  <%= form.hidden_field :exercise_id, :value => params[:exercise_id] %>
  <%= form.hidden_field :user_id, :value => current_user.id %>
  <div>
    <%= form.label :move_string %>
    <%= form.text_field :move_string %>
  </div>
  <div>
    <%= form.submit 'save solution', :class=>'btn btn-large btn-primary' %>
  </div>
<% end %>
