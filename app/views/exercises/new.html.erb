<% provide :title, 'new exercise' %>
<h1>create a new exercise</h1>

<%= form_for @exercise do |f| %>
  <%= render 'shared/error_messages', :object=>f.object %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :fen_position %>
    <%= f.text_field :fen_position %>
  </div>
  <div>
    <%= f.submit 'save exercise' %>
  </div>
<% end %>
